<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="filesystemScene" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.UIController">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="文件">
            <items>
              <MenuItem mnemonicParsing="false" text="关闭" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="编辑">
            <items>
              <MenuItem mnemonicParsing="false" text="删除" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="帮助">
            <items>
              <MenuItem mnemonicParsing="false" text="关于" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ToolBar fx:id="toolBar" prefHeight="60.0" prefWidth="900.0">
        <items>
          <Button fx:id="toolButton1" mnemonicParsing="false" text="Button" />
        </items>
      </ToolBar>
      <SplitPane dividerPositions="0.25, 0.75" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
         <items>
            <ScrollPane fx:id="treeScrollPane" fitToHeight="true" fitToWidth="true">
               <content>
                  <TreeView fx:id="tree" minWidth="200.0" nodeOrientation="LEFT_TO_RIGHT" />
               </content>
            </ScrollPane>
            <ScrollPane fx:id="viewScrollPane" fitToWidth="true" hbarPolicy="NEVER" pannable="true">
               <content>
                  <FlowPane fx:id="viewContent" minWidth="400.0" />
               </content>
               <contextMenu>
                  <ContextMenu fx:id="popupMenu">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </ScrollPane>
            <Accordion fx:id="infomationStack" minWidth="200.0">
              <panes>
                <TitledPane fx:id="diskChart" text="磁盘使用情况" />
                <TitledPane fx:id="FATTable" text="文件分配表" />
                  <TitledPane fx:id="diskContent" text="盘块内容" />
              </panes>
            </Accordion>
         </items>
      </SplitPane>
   </children>
</VBox>
